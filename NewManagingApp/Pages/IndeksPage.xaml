<Page x:Class="NewManagingApp.Pages.IndeksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewManagingApp.Pages"
      xmlns:mw="clr-namespace:NewManagingApp.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IndeksPage">
    <Page.DataContext>
        <mw:IndeksViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Click" Command="{Binding ShowListOfIndeks}"/>
        <DataGrid AutoGenerateColumns="True" Grid.Row="1" ItemsSource="{Binding listOfIndeks}"/>
    </Grid>
</Page>
